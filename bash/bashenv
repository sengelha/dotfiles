# bashenv: Set bash environment variables

# Path
PATH=""
for d in /bin /sbin /usr/bin /usr/sbin /usr/local/bin /usr/local/sbin /opt/local/bin; do
  if [ -d $d ]; then
    if [ -z "$PATH" ]; then
      PATH="$d"
    else
      PATH="$PATH:$d"
    fi
  fi
done
export PATH

# Prompt
export PS1="[\# \u@\h:\w]\$ "

# Force sorting of ls to match C order so that dotfiles come first
export LC_COLLATE="C"

# Pager
export LESS='-giMQsFXR'
export PAGER='less'

# Editors
if isexec vim; then
  export EDITOR='vim'
  export VISUAL='vim'
else
  export EDITOR='vi'
  export VISUAL='vi'
fi
